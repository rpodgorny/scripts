#!/bin/sh

set -x

HOSTNAME=`hostname`
REMOTE=backup@milhouse.podgorny.cz
REPO=$REMOTE:attic/$HOSTNAME
ARCHIVE=`date +%Y%m%dT%H%M%S` 

ssh-copy-id $REMOTE

attic init $REPO

attic create \
--do-not-cross-mountpoints --stats \
$REPO::$ARCHIVE \
/ /boot \
--exclude-caches \
--exclude '/tmp/*' \
--exclude '/var/log/journal/*' \
--exclude '/var/cache/pacman/pkg/*' \
--exclude '/home/backup/*' \
--exclude '/home/*/mnt/*' \
--exclude '/home/*/tmp/*' \
--exclude '/home/*/.cache/*' \
--exclude '/home/*/.thumbnails/*' \
--exclude '/root/.cache/*' \
|| exit 1

attic prune \
--stats \
--keep-within 7d \
--keep-daily 30 \
--keep-monthly 12 \
--keep-yearly 10 \
$REPO

