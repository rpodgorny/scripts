#!/usr/bin/python3

import os
import subprocess


def r(cmd, silent=False):
      if not silent:
          print(f">>> {cmd}")
          stdout = None
      else:
          stdout = subprocess.DEVNULL
      return subprocess.call(cmd, shell=True, stdout=stdout)


def is_arch():
    return os.path.isfile("/etc/pacman.conf")


def enable_pacman_multilib():
    if not is_arch():
        return
    fn = "/etc/pacman.conf"
    # Check if multilib is commented out
    if r(rf"grep '^#\[multilib\]$' {fn}", silent=True) != 0:
        return  # multilib already enabled or section not present
    # Uncomment both [multilib] and the following Include line
    r(rf"sudo sed -i '/^#\[multilib\]$/{{s/^#//;n;s/^#//}}' {fn}")


def main():
    if not is_arch():
        raise Exception("not arch!")

    user = "radek"

    r(f"sudo usermod -aG audio,input,video,wheel {user}")

    enable_pacman_multilib()

    r("sudo pacman -Sy --noconfirm --needed \
        base-devel \
        btrfs-progs \
        fwupd \
        fzf \
        gum \
        gthumb \
        just \
        jq \
        man \
        moosefs \
        obsidian \
        pacman-contrib \
        yay \
        pmount \
        ripgrep \
        rsync \
        rtorrent \
        tmux \
        tree \
        trezor-suite-appimage \
        unzip \
        watchexec \
        wdisplays \
        wireguard-tools \
        zip \
    ")

    r("sudo pacman -Sy --noconfirm --needed terminus-font ttf-terminus-nerd ttf-jetbrains-mono-nerd ttf-droid")  # ttf-droid for firefox to not look ugly

    # window manager and stuff
    # r("pacman -Sy --noconfirm --needed bemenu-wayland i3status mako sway swayidle swaylock wofi xorg-xwayland")
    r("sudo pacman -Sy --noconfirm --needed bemenu-wayland mako niri otf-font-awesome waybar wofi xdg-desktop-portal-gnome xwayland-satellite")  # otf-font-awesome for waybar icons


    # terminals
    r("sudo pacman -Sy --noconfirm --needed alacritty ghostty foot")

    # editors
    r("sudo pacman -Sy --noconfirm --needed helix neovim vim")
    r("nvim --headless -c 'Lazy! sync' -c 'qa'")

    # browsers
    r("sudo pacman -Sy --noconfirm --needed brave-bin chromium firefox")

    # email and stuff
    r("sudo pacman -Sy --noconfirm --needed datovka thunderbird")

    # file managers
    r("sudo pacman -Sy --noconfirm --needed broot mc yazi")

    # video players
    r("sudo pacman -Sy --noconfirm --needed mpv vlc")

    # system debugging
    r("sudo pacman -Sy --noconfirm --needed btop dool htop iotop nvme-cli powertop smartmontools")

    # network debugging
    r("sudo pacman -Sy --noconfirm --needed dog mtr speedtest-cli")

    # encryption and passwords
    r("sudo pacman -Sy --noconfirm --needed bitwarden bitwarden-cli seahorse encfs")

    # virtualization
    r("sudo pacman -Sy --noconfirm --needed samba qemu-full")  # samba for host disk sharing

    # remote shell
    r("sudo pacman -Sy --noconfirm --needed mosh omnirun sshpass")

    # remote desktop
    r("sudo pacman -Sy --noconfirm --needed remmina tigervnc wlvncc")
