#!/usr/bin/python3

import os
import subprocess
import time


def main():
	while 1:
		for fn in sorted(os.listdir('.')):
			if fn.lower().endswith('.mp3'):
				cmd = 'mplayer "./%s"' % fn
			else:
				cmd = 'omxplayer -b -o hdmi "./%s"' % fn
			#endif

			print('>>> %s' % cmd)
			subprocess.call(cmd, shell=True)
		#endfor

		time.sleep(1)
	#endwhile
#enddef


if __name__ == '__main__':
	main()
#endif
