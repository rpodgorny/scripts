#!/bin/sh
set -e -x

DEV=$1
DIR=/var/tmp/archlive
MNT=/tmp/archlive_mnt

test "$DEV"
test -b $DEV
grep 1 /sys/block/`basename $DEV`/removable
umount /var/tmp/archlive/work/efiboot || true

rm -rf $DIR
mkdir -p $DIR
rmdir $MNT || true
mkdir -p $MNT

cp -r /usr/share/archiso/configs/releng/* $DIR

echo '
[rpodgorny]
SigLevel = Never
Server = http://archlinux.podgorny.cz/$repo/os/$arch
' >> $DIR/pacman.conf

echo '
acpi
beep
borg
cpupower
dd_rescue
dosfstools
dstat
faddnsc-git
fish
htop
git
lm_sensors
mercurial
networkmanager
openssh
pmount
rsync
smartmontools
sshfs
sudo
tmux
uptimed
vim
zramswap
' >> $DIR/packages.both

echo '
cpuminer-git
rowhammer-test-git
' >> $DIR/packages.x86_64

echo '
systemctl enable NetworkManager
systemctl enable systemd-timesyncd
systemctl enable zramswap

cd /root
git clone https://github.com/rpodgorny/dotfiles
git clone https://github.com/rpodgorny/scripts
cd -
cd /root/dotfiles
./install
cd -

chsh -s /usr/bin/fish
' >> $DIR/airootfs/root/customize_airootfs.sh

mkdir $DIR/airootfs/root/.ssh

echo '
-----BEGIN RSA PRIVATE KEY-----
