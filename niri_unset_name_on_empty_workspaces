#!/bin/bash
# Unset names on empty, unfocused workspaces in niri

niri msg --json workspaces | jq -r '.[] | select(.name != null and .name != "" and .active_window_id == null and .is_focused == false) | .name' | while IFS= read -r ws_name; do
    niri msg action unset-workspace-name "$ws_name"
done
